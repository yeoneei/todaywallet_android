<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            android:layout_above="@+id/cardview_calendar"
            android:layout_alignLeft="@+id/cardview_calendar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019"
                android:textSize="20dp"
                android:textColor="#A09D9D"
                android:id="@+id/txt_calendar_year"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="November"
                android:textSize="30dp"
                android:textStyle="bold"
                android:id="@+id/txt_calendar_month"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/roundsuperlightgray"
            android:padding="10dp"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_above="@+id/cardview_calendar"
            android:layout_alignRight="@+id/cardview_calendar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료인출"
                android:textSize="13dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3회"
                android:textColor="@color/main"
                android:textSize="25dp"
                android:id="@+id/txt_free_count"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_calendar"
            android:layout_centerInParent="true"
            android:layout_width="380dp"
            android:layout_height="290dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sun"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="#A09D9D"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mon"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="#A09D9D"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tru"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="#A09D9D"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wen"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="#A09D9D"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thu"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="#A09D9D"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fri"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="#A09D9D"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sat"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="#A09D9D"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calendar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
