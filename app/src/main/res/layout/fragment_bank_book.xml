<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계좌"
                android:layout_centerInParent="true"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#5C5A5A"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_plus"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_shin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신한은행"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/roundwhite"
            android:outlineSpotShadowColor="@color/lignt_gray"
            android:elevation="4dp"
            android:translationZ="7dp"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="23dp"
                android:gravity="center"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="302-1000-1000-00"
                    android:textSize="18dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/txt_bank_book_number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="320000원"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/txt_bank_book_money"/>
            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:background="@drawable/bankbottom"
               android:layout_alignParentBottom="true"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/btn_show_transaction"
                   android:text="거래내역"
                   android:textColor="#FFFFFF"
                   android:textStyle="bold"
                   android:gravity="center"
                   />

           </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>