<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="지난 통계"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_static_right"
            android:background="@drawable/fullgrayrightstatic"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="미래통계"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/lignt_gray"
            android:id="@+id/btn_static_left"
            android:background="@drawable/roundgrayleftstatic"/>
    </LinearLayout>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="16dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rcy_static"/>
</LinearLayout>
</layout>